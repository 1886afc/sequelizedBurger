
<div class="wrapper">
    <div class="row">
        
        <div class="col-xs-8">
            <div class="jumbotron">
                <h1>Eat Da Burger</h1>
            </div>
        </div>

    </div>
<div class="row">
  <div class="col-md-4">
    <h2>Mmmmm... Waiting to be devoured</h2>

    <ul>
      {{#each burgers}}{{#unless this.devoured}}
      <div class="newBurgerDiv">
  
        {{this.burger_name}}

        <form id="devourbutton" action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit">Devour it!</button>
        </form>
      </li>
      </div>
      {{/unless}}{{/each}}
    </ul>
  </div>

  <div class="col-md-4">
  <h2>Create Da Burger!</h2>
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <label for="newBurger">Burger Title:</label>
        <input type="text" id="newBurger" name="name">
      </div>


      <button type="submit">Create!</button>
    </form>
  </div>

  <div class="col-md-4">
    <h2>Devoured burgers!</h2>

    <ul>
      {{#each burgers}} 
      {{#if this.devoured}}
      <div class="devouredBurgerDiv">
      <li>
        {{this.burger_name}}
        {{this.date}}
      </li>
      </div>
       {{/if}} {{/each}}
    </ul>
  </div>
</div>
